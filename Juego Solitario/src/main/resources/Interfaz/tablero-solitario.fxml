<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" style="-fx-background: linear-gradient(to bottom, #7d1414, #7d1414);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.juegosolitario.TableroSolitarioController">
    <children>

        <!-- Pila de robar y pila de descarte -->
        <HBox alignment="TOP_CENTER" spacing="50.0" style="-fx-padding: 0 20 0 20;">
            <children>
                <VBox spacing="25.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Mazo" textFill="WHITE" />
                        <Pane fx:id="panelPilaRobar" onMouseClicked="#manejarClickPilaRobar" prefHeight="160.0" prefWidth="130" style="-fx-background-color: #7d1414;
                              -fx-border-color: #7d1414;
                              -fx-border-width: 3;
                              -fx-background-radius: 12;
                              -fx-border-radius: 12;
                              -fx-cursor: hand;">
                            <effect>
                                <DropShadow color="#000000" offsetX="2.0" offsetY="2.0" radius="5.0" />
                            </effect>
                        </Pane>
                    </children>
                </VBox>

                <VBox spacing="25.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Descarte" textFill="WHITE" />
                        <Pane fx:id="panelPilaDescarte" prefHeight="160.0" prefWidth="130.0" style="-fx-background-color: #7d1414;
                              -fx-border-color: #7d1414;
                              -fx-border-width: 3;
                              -fx-background-radius: 12;
                              -fx-border-radius: 12;">
                            <effect>
                                <DropShadow color="#000000" offsetX="2.0" offsetY="2.0" radius="5.0" />
                            </effect>
                        </Pane>
                    </children>
                </VBox>

                <!-- Fundaciones -->
                <HBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="♠" textFill="BLACK"/>
                                <Pane fx:id="fundacionPicas" prefHeight="160.0" prefWidth="130.0" style="-fx-background-color: #7d1414;
                                      -fx-border-color: #000000;
                                      -fx-border-width: 3;
                                      -fx-background-radius: 12;
                                      -fx-border-radius: 12;" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="♥" textFill="#ff0000"/>
                                <Pane fx:id="fundacionCorazones" prefHeight="160.0" prefWidth="130.0" style="-fx-background-color: #7d1414;
                                      -fx-border-color: #000000;
                                      -fx-border-width: 3;
                                      -fx-background-radius: 12;
                                      -fx-border-radius: 12;" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="♦" textFill="#ff0000"/>
                                <Pane fx:id="fundacionDiamantes" prefHeight="160.0" prefWidth="130.0" style="-fx-background-color: #7d1414;
                                      -fx-border-color: #000000;
                                      -fx-border-width: 3;
                                      -fx-background-radius: 12;
                                      -fx-border-radius: 12;" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="♣" textFill="BLACK"/>
                                <Pane fx:id="fundacionTreboles" prefHeight="160.0" prefWidth="130.0" style="-fx-background-color: #7d1414;
                                      -fx-border-color: #000000;
                                      -fx-border-width: 3;
                                      -fx-background-radius: 12;
                                      -fx-border-radius: 12;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </HBox>

        <!-- Columnas -->
        <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 0 20 20 20;" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS"><children><Pane fx:id="columna1" minHeight="400.0" minWidth="85.0" /></children></VBox>
                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS"><children><Pane fx:id="columna2" minHeight="400.0" minWidth="85.0" /></children></VBox>
                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS"><children><Pane fx:id="columna3" minHeight="400.0" minWidth="85.0" /></children></VBox>
                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS"><children><Pane fx:id="columna4" minHeight="400.0" minWidth="85.0" /></children></VBox>
                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS"><children><Pane fx:id="columna5" minHeight="400.0" minWidth="85.0" /></children></VBox>
                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS"><children><Pane fx:id="columna6" minHeight="400.0" minWidth="85.0" /></children></VBox>
                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS"><children><Pane fx:id="columna7" minHeight="400.0" minWidth="85.0" /></children></VBox>
            </children>
            <effect>
                <Bloom threshold="1.0" />
            </effect>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
